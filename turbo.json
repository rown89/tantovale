{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",

	"tasks": {
		"build": {
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/**", ".next/**", "!.next/cache/**", "public/dist/**", ".vercel/output/**"],
			"dependsOn": ["^build"]
		},
		"dev": {
			"cache": false,
			"persistent": true,
			"inputs": ["$TURBO_DEFAULT$", ".env.local", ".env", "./packages/database/.env.local", "./packages/database/.env"],
			"env": [
				"NODE_ENV",
				"LOG_LEVEL",

				"SERVER_HOSTNAME",
				"SERVER_PORT",

				"STOREFRONT_HOSTNAME",
				"STOREFRONT_PORT",

				"ACCESS_TOKEN_SECRET",
				"REFRESH_TOKEN_SECRET",
				"EMAIL_VERIFY_TOKEN_SECRET",
				"RESET_TOKEN_SECRET",
				"COOKIE_SECRET",

				"AWS_REGION",
				"AWS_BUCKET_NAME",
				"AWS_ACCESS_KEY",
				"AWS_SECRET_ACCESS_KEY",

				"SMTP_HOST",
				"SMTP_PORT",
				"SMTP_USER",
				"SMTP_PASS",

				"DATABASE_HOST",
				"DATABASE_PORT",
				"POSTGRES_USER",
				"POSTGRES_PASSWORD",
				"POSTGRES_DB"
			]
		},
		"lint": {
			"dependsOn": ["^build"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"clean": {
			"cache": false
		}
	}
}
