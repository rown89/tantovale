{
	"name": "workspace",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"clean": "turbo run clean",
		"dev": "turbo run dev",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"lint": "turbo lint",
		"dev-server": "pnpm run --filter=@workspace/server hono:dev",
		"dev-storefront": "pnpm run --filter=@workspace/storefront next:dev",
		"db-push": "pnpm run --filter=@workspace/server db:push",
		"seed-users": "pnpm run --filter=@workspace/server seed:users",
		"seed-categories": "pnpm run --filter=@workspace/server seed:categories",
		"seed-countries": "pnpm run --filter=@workspace/server seed:countries",
		"seed-all": "bash seed-all.sh",
		"clean-all": "bash clean-project.sh",
		"prepare": "husky"
	},
	"engines": {
		"node": ">=22.0.0"
	},
	"packageManager": "pnpm@10.10.0+sha512.d615db246fe70f25dcfea6d8d73dee782ce23e2245e3c4f6f888249fb568149318637dca73c2c5c8ef2a4ca0d5657fb9567188bfab47f566d1ee6ce987815c39",
	"dependencies": {
		"@aws-sdk/client-s3": "^3.758.0",
		"@aws-sdk/lib-storage": "^3.758.0",
		"@aws-sdk/s3-presigned-post": "^3.758.0",
		"@aws-sdk/s3-request-presigner": "^3.758.0",
		"@tanstack/react-query": "^5.75.5",
		"aws-cdk-lib": "^2.184.1",
		"date-fns": "^4.1.0",
		"dotenv": "^16.4.7",
		"dotenv-expand": "^12.0.1",
		"drizzle-kit": "^0.31.1",
		"drizzle-orm": "^0.43.1",
		"drizzle-zod": "^0.7.1",
		"hono": "^4.7.11",
		"zod": "^3.25.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"dotenv-cli": "^8.0.0",
		"husky": "^9.1.7",
		"prettier": "^3.5.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"turbo": "^2.5.3",
		"typescript": "5.7.3"
	}
}
