{
	"name": "workspace",
	"private": true,
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"dev-storefront": "npm run --workspace=@workspace/storefront next:dev",
		"dev-server": "npm run --workspace=@workspace/server dev",
		"lint": "turbo lint",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"prepare": "husky"
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "npm@10.9.2",
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		]
	},
	"dependencies": {
		"dotenv": "^16.4.7",
		"drizzle-orm": "^0.39.1",
		"prettier-plugin-tailwindcss": "^0.6.10",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.6.1",
		"@commitlint/config-conventional": "^19.6.0",
		"dotenv-cli": "^8.0.0",
		"husky": "^9.1.7",
		"prettier": "^3.2.5",
		"turbo": "^2.3.3",
		"typescript": "5.5.4"
	}
}
