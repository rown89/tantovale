{
  "extends": "@tantovale/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },

  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts",
    "globals.css",
    "tailwind.config.js",
    "postcss.config.mjs",
    "eslint.config.mjs",
    "prettier.config.mjs"
  ],
  "exclude": ["node_modules"]
}
