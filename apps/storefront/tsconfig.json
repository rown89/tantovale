{
  "extends": "@workspace/typescript-config/nextjs.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "composite": true,
    "paths": {
      "@/*": ["./src/*"],
      "@workspace/ui/*": ["../../packages/ui/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "references": [{ "path": "../server" }],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
