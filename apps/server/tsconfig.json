{
  "extends": "@workspace/typescript-config/base.json",
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist",
    "rootDir": ".",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "paths": {
      "#*": ["./src/*"],
      "#routes/*": ["./src/routes/*"],
      "#lib/*": ["./src/lib/*"],
      "#utils/*": ["./src/utils/*"],
      "#schema": ["./src/schema/index.ts"],
      "#schema/*": ["./src/schema/*"],
      "#database/*": ["./database/*"],
      "#mailer/*": ["./mailer/*"]
    },
    "types": ["node", "../../.sst/**/*"]
  },
  "include": [
    ".",
    "src/**/*",
    "database/**/*",
    "mailer/**/*",
    "../../.sst/**/*"
  ],
  "exclude": ["node_modules"]
}
