{
	"extends": "@workspace/typescript-config/base.json",
	"compilerOptions": {
		"strict": true,
		"declaration": true,
		"composite": true,
		"incremental": true,
		"declarationMap": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"rootDir": ".",
		"baseUrl": ".",
		"outDir": "./dist",
		"module": "ESNext",
		"moduleResolution": "bundler",

		"lib": ["esnext"],
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx"
	},
	"tsc-alias": {
		"resolveFullPaths": true
	},
	"include": [".", "src/**/*"],
	"exclude": ["node_modules", "dist"]
}
