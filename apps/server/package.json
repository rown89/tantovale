{
  "name": "@workspace/server",
  "version": "1.0.0",
  "private": true,
  "module": "esnext",
  "type": "module",
  "scripts": {
    "hono:build": "tsc",
    "hono:dev": "tsx watch src/index.ts",
    "hono:start": "node ./dist/src/index.js",
    "typecheck": "npx tsc --noEmit"
  },
  "imports": {
    "#*": [
      "./src/*.ts"
    ],
    "#lib/*": "./src/lib/*.ts",
    "#mailer/*": "./mailer/*.ts",
    "#routes/*": "./src/routes/*.ts",
    "#schema": "./src/schema/index.ts",
    "#schema/*": [
      "./src/schema/*.ts",
      "./src/schema/index.ts"
    ],
    "#utils/*": "./src/utils/*.ts"
  },
  "exports": {
    "./apiRoutes": "./src/app.ts",
    "./lib/constants": "./src/lib/constants.ts",
    "./schema": "./src/schema/index.ts"
  },
  "dependencies": {
    "@workspace/database": "*",
    "@hono/node-server": "^1.13.8",
    "@hono/swagger-ui": "^0.5.1",
    "@hono/zod-openapi": "^0.19.2",
    "@hono/zod-validator": "^0.4.3",
    "hono-openapi": "^0.4.6",
    "hono-pino": "^0.8.0",
    "@scalar/hono-api-reference": "^0.5.172",
    "bcryptjs": "^3.0.2",
    "nodemailer": "^6.10.0",
    "pg": "^8.13.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "postgres": "^3.4.5",
    "sharp": "^0.33.5",
    "stoker": "^1.4.2",
    "zod-openapi": "^4.2.3",
    "sst": "*",
    "drizzle-orm": "*",
    "drizzle-zod": "*",
    "zod": "*"
  },
  "devDependencies": {
    "@workspace/eslint-config": "*",
    "@workspace/typescript-config": "*",
    "@types/node": "^20.11.17",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.11.11",
    "dotenv-cli": "^8.0.0",
    "tsx": "^4.19.2"
  }
}
